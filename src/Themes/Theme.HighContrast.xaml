<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BrushWindowBG"     Color="#000000"/>
    <SolidColorBrush x:Key="BrushSurface"      Color="#0B0B0B"/>
    <SolidColorBrush x:Key="BrushCard"         Color="#111111"/>
    <SolidColorBrush x:Key="BrushCardBorder"   Color="#2A2A2A"/>
    <SolidColorBrush x:Key="BrushDivider"      Color="#2A2A2A"/>

    <SolidColorBrush x:Key="BrushHeaderBG"     Color="#000000"/>
    <SolidColorBrush x:Key="BrushHeaderBorder" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="BrushFooterBG"     Color="#000000"/>
    <SolidColorBrush x:Key="BrushFooterBorder" Color="#3A3A3A"/>

    <SolidColorBrush x:Key="BrushPrimaryFG"    Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BrushSecondaryFG"  Color="#EDEDED"/>
    <SolidColorBrush x:Key="BrushMutedFG"      Color="#CFCFCF"/>
    <SolidColorBrush x:Key="BrushDisabledFG"   Color="#9E9E9E"/>
    <SolidColorBrush x:Key="BrushHeaderFG"     Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BrushHeaderSubFG"  Color="#F2F2F2"/>
    <SolidColorBrush x:Key="BrushAvatarBG"     Color="#1F1F1F"/>

    <SolidColorBrush x:Key="AccentBrush"        Color="#FFD400"/>
    <SolidColorBrush x:Key="AccentMuted"        Color="#3A3200"/>
    <SolidColorBrush x:Key="AccentBrushHover"   Color="#FFDF33"/>
    <SolidColorBrush x:Key="AccentBrushPressed" Color="#E0BF00"/>
    <SolidColorBrush x:Key="AccentBorderBrush"  Color="#FFE066"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="#00E676"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9100"/>
    <SolidColorBrush x:Key="ErrorBrush"   Color="#FF1744"/>
    <SolidColorBrush x:Key="InfoBrush"    Color="#40C4FF"/>

    <SolidColorBrush x:Key="ButtonFG"             Color="#000000"/>
    <SolidColorBrush x:Key="ButtonBG"             Color="#FFD400"/>
    <SolidColorBrush x:Key="ButtonHoverBG"        Color="#FFDF33"/>
    <SolidColorBrush x:Key="ButtonPressedBG"      Color="#E0BF00"/>
    <SolidColorBrush x:Key="ButtonBorder"         Color="#FFE066"/>
    <SolidColorBrush x:Key="ButtonHoverBorder"    Color="#FFE98C"/>
    <SolidColorBrush x:Key="ButtonPressedBorder"  Color="#CCAA00"/>

    <SolidColorBrush x:Key="TextBoxFG"          Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBoxBG"          Color="#0B0B0B"/>
    <SolidColorBrush x:Key="TextBoxBorder"      Color="#FFD400"/>
    <SolidColorBrush x:Key="TextSelectionBG"    Color="#FFD400"/>
    <SolidColorBrush x:Key="TextSelectionFG"    Color="#000000"/>

    <SolidColorBrush x:Key="ProgressBG"         Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ProgressIndicator"  Color="#FFD400"/>

    <FontFamily x:Key="FontBase">Segoe UI</FontFamily>
</ResourceDictionary>
