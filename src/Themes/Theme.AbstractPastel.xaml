<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Surfaces (light pastel) -->
  <SolidColorBrush x:Key="BrushWindowBG"     Color="#FBFAFF"/>
  <SolidColorBrush x:Key="BrushSurface"      Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushCard"         Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushCardBorder"   Color="#EAE6FF"/>
  <SolidColorBrush x:Key="BrushDivider"      Color="#EDE9FE"/>

  <!-- Header / Footer -->
  <SolidColorBrush x:Key="BrushHeaderBG"     Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushHeaderBorder" Color="#EDE9FE"/>
  <SolidColorBrush x:Key="BrushFooterBG"     Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushFooterBorder" Color="#EDE9FE"/>

  <!-- Text (deep purple) -->
  <SolidColorBrush x:Key="BrushPrimaryFG"    Color="#1F1147"/>
  <SolidColorBrush x:Key="BrushSecondaryFG"  Color="#3F2A7C"/>
  <SolidColorBrush x:Key="BrushMutedFG"      Color="#6D5AB5"/>
  <SolidColorBrush x:Key="BrushDisabledFG"   Color="#A094D8"/>
  <SolidColorBrush x:Key="BrushHeaderFG"     Color="#26175A"/>
  <SolidColorBrush x:Key="BrushHeaderSubFG"  Color="#6D5AB5"/>
  <SolidColorBrush x:Key="BrushAvatarBG"     Color="#F3EEFF"/>

  <!-- Accent (violet) -->
  <SolidColorBrush x:Key="AccentBrush"        Color="#7C3AED"/>
  <SolidColorBrush x:Key="AccentMuted"        Color="#EFE7FF"/>
  <SolidColorBrush x:Key="AccentBrushHover"   Color="#8B5CF6"/>
  <SolidColorBrush x:Key="AccentBrushPressed" Color="#6D28D9"/>
  <SolidColorBrush x:Key="AccentBorderBrush"  Color="#C4B5FD"/>

  <!-- Status -->
  <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
  <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
  <SolidColorBrush x:Key="ErrorBrush"   Color="#EF4444"/>
  <SolidColorBrush x:Key="InfoBrush"    Color="#3B82F6"/>

  <!-- Buttons -->
  <SolidColorBrush x:Key="ButtonFG"            Color="#1F1147"/>
  <SolidColorBrush x:Key="ButtonBG"            Color="#F5F3FF"/>
  <SolidColorBrush x:Key="ButtonHoverBG"       Color="#EEE8FF"/>
  <SolidColorBrush x:Key="ButtonPressedBG"     Color="#E9D5FF"/>
  <SolidColorBrush x:Key="ButtonBorder"        Color="#DDD6FE"/>
  <SolidColorBrush x:Key="ButtonHoverBorder"   Color="#C4B5FD"/>
  <SolidColorBrush x:Key="ButtonPressedBorder" Color="#A78BFA"/>

  <!-- TextBox -->
  <SolidColorBrush x:Key="TextBoxFG"        Color="#1F1147"/>
  <SolidColorBrush x:Key="TextBoxBG"        Color="#FFFFFF"/>
  <SolidColorBrush x:Key="TextBoxBorder"    Color="#DDD6FE"/>
  <SolidColorBrush x:Key="TextSelectionBG"  Color="#A78BFA"/>
  <SolidColorBrush x:Key="TextSelectionFG"  Color="#FFFFFF"/>

  <!-- Progress -->
  <SolidColorBrush x:Key="ProgressBG"        Color="#EDE9FE"/>
  <SolidColorBrush x:Key="ProgressIndicator" Color="#7C3AED"/>

  <FontFamily x:Key="FontBase">Segoe UI</FontFamily>
</ResourceDictionary>
