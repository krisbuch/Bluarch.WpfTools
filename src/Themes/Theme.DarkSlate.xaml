<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Palette -->
    <SolidColorBrush x:Key="BrushWindowBG"     Color="#1E1E1E"/>
    <SolidColorBrush x:Key="BrushSurface"      Color="#262626"/>
    <SolidColorBrush x:Key="BrushCard"         Color="#2E2E2E"/>
    <SolidColorBrush x:Key="BrushCardBorder"   Color="#3E3E3E"/>
    <SolidColorBrush x:Key="BrushDivider"      Color="#3A3A3A"/>

    <SolidColorBrush x:Key="BrushHeaderBG"     Color="#303030"/>
    <SolidColorBrush x:Key="BrushHeaderBorder" Color="#444444"/>
    <SolidColorBrush x:Key="BrushFooterBG"     Color="#262626"/>
    <SolidColorBrush x:Key="BrushFooterBorder" Color="#3A3A3A"/>

    <SolidColorBrush x:Key="BrushPrimaryFG"    Color="#EAEAEA"/>
    <SolidColorBrush x:Key="BrushSecondaryFG"  Color="#BFC3C5"/>
    <SolidColorBrush x:Key="BrushMutedFG"      Color="#8B8B8B"/>
    <SolidColorBrush x:Key="BrushDisabledFG"   Color="#666666"/>
    <SolidColorBrush x:Key="BrushHeaderFG"     Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BrushHeaderSubFG"  Color="#A8B0B7"/>
    <SolidColorBrush x:Key="BrushAvatarBG"     Color="#555555"/>

    <!-- Accent & states -->
    <SolidColorBrush x:Key="AccentBrush"        Color="#2B88FF"/>
    <SolidColorBrush x:Key="AccentMuted"        Color="#223B63"/>
    <SolidColorBrush x:Key="AccentBrushHover"   Color="#4CA0FF"/>
    <SolidColorBrush x:Key="AccentBrushPressed" Color="#1F6CD4"/>
    <SolidColorBrush x:Key="AccentBorderBrush"  Color="#3D7DE0"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
    <SolidColorBrush x:Key="ErrorBrush"   Color="#FF5252"/>
    <SolidColorBrush x:Key="InfoBrush"    Color="#29B6F6"/>

    <!-- Controls -->
    <SolidColorBrush x:Key="ButtonFG"           Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBG"           Color="#3A3A3A"/>
    <SolidColorBrush x:Key="ButtonHoverBG"      Color="#474747"/>
    <SolidColorBrush x:Key="ButtonPressedBG"    Color="#2F2F2F"/>
    <SolidColorBrush x:Key="ButtonBorder"       Color="#505050"/>
    <SolidColorBrush x:Key="ButtonHoverBorder"  Color="#5C5C5C"/>
    <SolidColorBrush x:Key="ButtonPressedBorder" Color="#3D3D3D"/>

    <SolidColorBrush x:Key="TextBoxFG"          Color="#EAEAEA"/>
    <SolidColorBrush x:Key="TextBoxBG"          Color="#2A2A2A"/>
    <SolidColorBrush x:Key="TextBoxBorder"      Color="#464646"/>
    <SolidColorBrush x:Key="TextSelectionBG"    Color="#2B88FF"/>
    <SolidColorBrush x:Key="TextSelectionFG"    Color="#FFFFFF"/>

    <SolidColorBrush x:Key="ProgressBG"         Color="#3D3D3D"/>
    <SolidColorBrush x:Key="ProgressIndicator"  Color="#2B88FF"/>

    <!-- Fonts -->
    <FontFamily x:Key="FontBase">Segoe UI</FontFamily>
</ResourceDictionary>
