<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Surfaces -->
  <SolidColorBrush x:Key="BrushWindowBG"     Color="#F6F7F9"/>
  <SolidColorBrush x:Key="BrushSurface"      Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushCard"         Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushCardBorder"   Color="#E5E7EB"/>
  <SolidColorBrush x:Key="BrushDivider"      Color="#E5E7EB"/>

  <!-- Header / Footer -->
  <SolidColorBrush x:Key="BrushHeaderBG"     Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushHeaderBorder" Color="#E5E7EB"/>
  <SolidColorBrush x:Key="BrushFooterBG"     Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushFooterBorder" Color="#E5E7EB"/>

  <!-- Text -->
  <SolidColorBrush x:Key="BrushPrimaryFG"    Color="#111827"/>
  <SolidColorBrush x:Key="BrushSecondaryFG"  Color="#334155"/>
  <SolidColorBrush x:Key="BrushMutedFG"      Color="#64748B"/>
  <SolidColorBrush x:Key="BrushDisabledFG"   Color="#94A3B8"/>
  <SolidColorBrush x:Key="BrushHeaderFG"     Color="#0F172A"/>
  <SolidColorBrush x:Key="BrushHeaderSubFG"  Color="#475569"/>
  <SolidColorBrush x:Key="BrushAvatarBG"     Color="#E2E8F0"/>

  <!-- Accent -->
  <SolidColorBrush x:Key="AccentBrush"        Color="#0EA5E9"/>
  <SolidColorBrush x:Key="AccentMuted"        Color="#E0F2FE"/>
  <SolidColorBrush x:Key="AccentBrushHover"   Color="#38BDF8"/>
  <SolidColorBrush x:Key="AccentBrushPressed" Color="#0284C7"/>
  <SolidColorBrush x:Key="AccentBorderBrush"  Color="#7DD3FC"/>

  <!-- Status -->
  <SolidColorBrush x:Key="SuccessBrush" Color="#16A34A"/>
  <SolidColorBrush x:Key="WarningBrush" Color="#D97706"/>
  <SolidColorBrush x:Key="ErrorBrush"   Color="#DC2626"/>
  <SolidColorBrush x:Key="InfoBrush"    Color="#0284C7"/>

  <!-- Buttons -->
  <SolidColorBrush x:Key="ButtonFG"            Color="#0F172A"/>
  <SolidColorBrush x:Key="ButtonBG"            Color="#F1F5F9"/>
  <SolidColorBrush x:Key="ButtonHoverBG"       Color="#E2E8F0"/>
  <SolidColorBrush x:Key="ButtonPressedBG"     Color="#CBD5E1"/>
  <SolidColorBrush x:Key="ButtonBorder"        Color="#CBD5E1"/>
  <SolidColorBrush x:Key="ButtonHoverBorder"   Color="#94A3B8"/>
  <SolidColorBrush x:Key="ButtonPressedBorder" Color="#94A3B8"/>

  <!-- TextBox -->
  <SolidColorBrush x:Key="TextBoxFG"        Color="#0F172A"/>
  <SolidColorBrush x:Key="TextBoxBG"        Color="#FFFFFF"/>
  <SolidColorBrush x:Key="TextBoxBorder"    Color="#CBD5E1"/>
  <SolidColorBrush x:Key="TextSelectionBG"  Color="#0EA5E9"/>
  <SolidColorBrush x:Key="TextSelectionFG"  Color="#FFFFFF"/>

  <!-- Progress -->
  <SolidColorBrush x:Key="ProgressBG"        Color="#E5E7EB"/>
  <SolidColorBrush x:Key="ProgressIndicator" Color="#0EA5E9"/>

  <FontFamily x:Key="FontBase">Segoe UI</FontFamily>
</ResourceDictionary>
