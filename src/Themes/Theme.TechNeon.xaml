<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Surfaces (dark) -->
  <SolidColorBrush x:Key="BrushWindowBG"     Color="#0B0E11"/>
  <SolidColorBrush x:Key="BrushSurface"      Color="#101418"/>
  <SolidColorBrush x:Key="BrushCard"         Color="#121820"/>
  <SolidColorBrush x:Key="BrushCardBorder"   Color="#1F2A37"/>
  <SolidColorBrush x:Key="BrushDivider"      Color="#1A2530"/>

  <!-- Header / Footer -->
  <SolidColorBrush x:Key="BrushHeaderBG"     Color="#0F1720"/>
  <SolidColorBrush x:Key="BrushHeaderBorder" Color="#223040"/>
  <SolidColorBrush x:Key="BrushFooterBG"     Color="#0E1319"/>
  <SolidColorBrush x:Key="BrushFooterBorder" Color="#1C2834"/>

  <!-- Text -->
  <SolidColorBrush x:Key="BrushPrimaryFG"    Color="#E6F1FF"/>
  <SolidColorBrush x:Key="BrushSecondaryFG"  Color="#B8C7E3"/>
  <SolidColorBrush x:Key="BrushMutedFG"      Color="#8AA0BC"/>
  <SolidColorBrush x:Key="BrushDisabledFG"   Color="#5A6B7F"/>
  <SolidColorBrush x:Key="BrushHeaderFG"     Color="#EAF2FF"/>
  <SolidColorBrush x:Key="BrushHeaderSubFG"  Color="#9AB6D9"/>
  <SolidColorBrush x:Key="BrushAvatarBG"     Color="#203040"/>

  <!-- Accent (neon cyan) -->
  <SolidColorBrush x:Key="AccentBrush"        Color="#00E5FF"/>
  <SolidColorBrush x:Key="AccentMuted"        Color="#0D2B33"/>
  <SolidColorBrush x:Key="AccentBrushHover"   Color="#33EDFF"/>
  <SolidColorBrush x:Key="AccentBrushPressed" Color="#00B8CC"/>
  <SolidColorBrush x:Key="AccentBorderBrush"  Color="#33CFE0"/>

  <!-- Status -->
  <SolidColorBrush x:Key="SuccessBrush" Color="#22C55E"/>
  <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
  <SolidColorBrush x:Key="ErrorBrush"   Color="#EF4444"/>
  <SolidColorBrush x:Key="InfoBrush"    Color="#0EA5E9"/>

  <!-- Buttons -->
  <SolidColorBrush x:Key="ButtonFG"            Color="#E6F1FF"/>
  <SolidColorBrush x:Key="ButtonBG"            Color="#1A2430"/>
  <SolidColorBrush x:Key="ButtonHoverBG"       Color="#223042"/>
  <SolidColorBrush x:Key="ButtonPressedBG"     Color="#162433"/>
  <SolidColorBrush x:Key="ButtonBorder"        Color="#2A3A4A"/>
  <SolidColorBrush x:Key="ButtonHoverBorder"   Color="#35607A"/>
  <SolidColorBrush x:Key="ButtonPressedBorder" Color="#2E4B60"/>

  <!-- TextBox -->
  <SolidColorBrush x:Key="TextBoxFG"        Color="#E6F1FF"/>
  <SolidColorBrush x:Key="TextBoxBG"        Color="#101923"/>
  <SolidColorBrush x:Key="TextBoxBorder"    Color="#2A3A4A"/>
  <SolidColorBrush x:Key="TextSelectionBG"  Color="#00E5FF"/>
  <SolidColorBrush x:Key="TextSelectionFG"  Color="#0B0E11"/>

  <!-- Progress -->
  <SolidColorBrush x:Key="ProgressBG"        Color="#1E2A36"/>
  <SolidColorBrush x:Key="ProgressIndicator" Color="#00E5FF"/>

  <FontFamily x:Key="FontBase">Segoe UI</FontFamily>
</ResourceDictionary>
