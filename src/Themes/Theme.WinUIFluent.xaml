<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Surfaces (Fluent-like light) -->
  <SolidColorBrush x:Key="BrushWindowBG"     Color="#F3F3F3"/>
  <SolidColorBrush x:Key="BrushSurface"      Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushCard"         Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushCardBorder"   Color="#E1E1E1"/>
  <SolidColorBrush x:Key="BrushDivider"      Color="#E1E1E1"/>

  <!-- Header / Footer -->
  <SolidColorBrush x:Key="BrushHeaderBG"     Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushHeaderBorder" Color="#E1E1E1"/>
  <SolidColorBrush x:Key="BrushFooterBG"     Color="#FFFFFF"/>
  <SolidColorBrush x:Key="BrushFooterBorder" Color="#E1E1E1"/>

  <!-- Text -->
  <SolidColorBrush x:Key="BrushPrimaryFG"    Color="#202020"/>
  <SolidColorBrush x:Key="BrushSecondaryFG"  Color="#3A3A3A"/>
  <SolidColorBrush x:Key="BrushMutedFG"      Color="#5E5E5E"/>
  <SolidColorBrush x:Key="BrushDisabledFG"   Color="#A0A0A0"/>
  <SolidColorBrush x:Key="BrushHeaderFG"     Color="#202020"/>
  <SolidColorBrush x:Key="BrushHeaderSubFG"  Color="#4A4A4A"/>
  <SolidColorBrush x:Key="BrushAvatarBG"     Color="#E8E8E8"/>

  <!-- Accent (Fluent blue) -->
  <SolidColorBrush x:Key="AccentBrush"        Color="#0078D4"/>
  <SolidColorBrush x:Key="AccentMuted"        Color="#D6E8FB"/>
  <SolidColorBrush x:Key="AccentBrushHover"   Color="#1084D1"/>
  <SolidColorBrush x:Key="AccentBrushPressed" Color="#0E5AA7"/>
  <SolidColorBrush x:Key="AccentBorderBrush"  Color="#66A6E7"/>

  <!-- Status -->
  <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
  <SolidColorBrush x:Key="WarningBrush" Color="#986F0B"/>
  <SolidColorBrush x:Key="ErrorBrush"   Color="#D13438"/>
  <SolidColorBrush x:Key="InfoBrush"    Color="#005FB8"/>

  <!-- Buttons -->
  <SolidColorBrush x:Key="ButtonFG"            Color="#202020"/>
  <SolidColorBrush x:Key="ButtonBG"            Color="#F5F5F5"/>
  <SolidColorBrush x:Key="ButtonHoverBG"       Color="#EDEDED"/>
  <SolidColorBrush x:Key="ButtonPressedBG"     Color="#E1E1E1"/>
  <SolidColorBrush x:Key="ButtonBorder"        Color="#D1D1D1"/>
  <SolidColorBrush x:Key="ButtonHoverBorder"   Color="#BDBDBD"/>
  <SolidColorBrush x:Key="ButtonPressedBorder" Color="#AFAFAF"/>

  <!-- TextBox -->
  <SolidColorBrush x:Key="TextBoxFG"        Color="#202020"/>
  <SolidColorBrush x:Key="TextBoxBG"        Color="#FFFFFF"/>
  <SolidColorBrush x:Key="TextBoxBorder"    Color="#C7C7C7"/>
  <SolidColorBrush x:Key="TextSelectionBG"  Color="#0078D4"/>
  <SolidColorBrush x:Key="TextSelectionFG"  Color="#FFFFFF"/>

  <!-- Progress -->
  <SolidColorBrush x:Key="ProgressBG"        Color="#E5E5E5"/>
  <SolidColorBrush x:Key="ProgressIndicator" Color="#0078D4"/>

  <FontFamily x:Key="FontBase">Segoe UI</FontFamily>
</ResourceDictionary>
