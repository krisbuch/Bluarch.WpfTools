<UserControl x:Class="Bluarch.SideBarIcons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="80">
    <UserControl.Resources>

        <!-- Separator (tynd, subtil) -->
        <Style x:Key="BluarchSeparatorThin" TargetType="Separator">
            <Setter Property="Margin" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Height="1"
                                Background="{DynamicResource BrushDivider}"
                                SnapsToDevicePixels="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Monokrom ikon via Image: Source bindes til Tag -->
        <Style x:Key="BluarchIconImage" TargetType="Image">
            <Setter Property="Width"  Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding"   Value="True"/>
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
            <Setter Property="Source"
                    Value="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"/>
        </Style>

        <!-- Nav-item (RadioButton med accent-bar, hover og selected-baggrund) -->
        <Style x:Key="BluarchIconNavRadio" TargetType="RadioButton">
            <Setter Property="Width"     Value="60"/>
            <Setter Property="Height"    Value="56"/>
            <Setter Property="Foreground" Value="{DynamicResource BrushPrimaryFG}"/>
            <Setter Property="ToolTipService.ShowDuration" Value="60000"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <!-- Accent-bar (selected) -->
                            <Border x:Name="AccentBar"
                                    Width="3"
                                    HorizontalAlignment="Left"
                                    CornerRadius="2"
                                    Background="{DynamicResource AccentBrush}"
                                    Visibility="Collapsed"/>

                            <!-- Hover/selected baggrund -->
                            <Border x:Name="Bg"
                                    Margin="6"
                                    CornerRadius="12"
                                    Background="Transparent"
                                    BorderBrush="{DynamicResource BrushDivider}"
                                    BorderThickness="0"/>

                            <!-- Indhold (ikon) -->
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource ButtonHoverBG}"/>
                                <Setter TargetName="Bg" Property="BorderThickness" Value="0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource ButtonPressedBG}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="AccentBar" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Bg"        Property="Background" Value="{DynamicResource AccentMuted}"/>
                                <Setter TargetName="Bg"        Property="BorderThickness" Value="0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- Sidebar container -->
    <Border Background="{DynamicResource BrushSurface}"
            BorderBrush="{DynamicResource BrushDivider}"
            BorderThickness="0,0,1,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TOP: logo/spacing -->
            <StackPanel Grid.Row="0" Margin="0" HorizontalAlignment="Center">
                <Border Height="10" Background="{x:Null}"/>
            </StackPanel>

            <!-- MID: ikon-nav -->
            <StackPanel x:Name="PART_TopItems"
                        Grid.Row="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Center">

                <!-- Eksempler (skift Tag til dine faktiske billeder) -->
                <RadioButton x:Name="Nav_Home"   GroupName="Nav"
                             Style="{StaticResource BluarchIconNavRadio}"
                             ToolTip="Home">
                    <Image Style="{StaticResource BluarchIconImage}"
                           Tag="Icons/home.png"/>
                </RadioButton>

                <RadioButton x:Name="Nav_Dashboard" GroupName="Nav"
                             Style="{StaticResource BluarchIconNavRadio}"
                             ToolTip="Dashboard" IsChecked="True">
                    <Image Style="{StaticResource BluarchIconImage}"
                           Tag="Icons/dashboard.png"/>
                </RadioButton>

                <RadioButton x:Name="Nav_Users" GroupName="Nav"
                             Style="{StaticResource BluarchIconNavRadio}"
                             ToolTip="Users">
                    <Image Style="{StaticResource BluarchIconImage}"
                           Tag="Icons/users.png"/>
                </RadioButton>

                <RadioButton x:Name="Nav_Reports" GroupName="Nav"
                             Style="{StaticResource BluarchIconNavRadio}"
                             ToolTip="Reports">
                    <Image Style="{StaticResource BluarchIconImage}"
                           Tag="Icons/reports.png"/>
                </RadioButton>

            </StackPanel>

            <!-- BUND: separator + systemikoner -->
            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center">
                <Separator Style="{StaticResource BluarchSeparatorThin}"/>
                <StackPanel x:Name="PART_BottomItems" Orientation="Vertical" HorizontalAlignment="Center">

                    <RadioButton x:Name="Nav_Settings" GroupName="Nav"
                                 Style="{StaticResource BluarchIconNavRadio}"
                                 ToolTip="Settings">
                        <Image Style="{StaticResource BluarchIconImage}"
                               Tag="Icons/settings.png"/>
                    </RadioButton>

                    <RadioButton x:Name="Nav_Help" GroupName="Nav"
                                 Style="{StaticResource BluarchIconNavRadio}"
                                 ToolTip="Help">
                        <Image Style="{StaticResource BluarchIconImage}"
                               Tag="Icons/help.png"/>
                    </RadioButton>

                </StackPanel>
                <Border Height="8" Background="{x:Null}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
