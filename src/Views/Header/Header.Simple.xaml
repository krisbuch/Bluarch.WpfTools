<!-- Views/Header.Simple.xaml -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:Name="HeaderRoot"
      Height="140"
      Margin="8">

    <Grid.Resources>
        <!-- Fallbacks hvis tema ikke er indlæst -->
        <SolidColorBrush x:Key="__FallbackHeaderBG"    Color="#2A2E33"/>
        <SolidColorBrush x:Key="__FallbackHeaderFG"    Color="#FFFFFF"/>
        <SolidColorBrush x:Key="__FallbackHeaderSubFG" Color="#A8B0B8"/>
    </Grid.Resources>

    <Border CornerRadius="12"
            Background="{DynamicResource BrushHeaderBG}"
            Padding="12"
            SnapsToDevicePixels="True">
        <Border.Background>
            <SolidColorBrush Color="#2A2E33" Opacity="1"
                             x:Name="__FallbackBG"
                             x:Shared="False"/>
        </Border.Background>
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background"
                        Value="{DynamicResource BrushHeaderBG}"/>
                <Style.Triggers>
                    <Trigger Property="Background" Value="{x:Null}">
                        <Setter Property="Background"
                                Value="{StaticResource __FallbackHeaderBG}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Border.Effect>
            <DropShadowEffect Color="#000000"
                              Direction="270"
                              ShadowDepth="4"
                              BlurRadius="12"
                              Opacity="0.45"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"  />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Venstre: Logo + tekster -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Image x:Name="HeaderLogo"
                       Width="88" Height="88"
                       Stretch="Uniform"
                       Margin="6,0,12,0"
                       RenderTransformOrigin="0.5,0.5"
                       Opacity="0.9">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Image.RenderTransform>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1.0"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.08" ScaleY="1.08"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="HeaderTitle"
                               Text="TITLE"
                               FontWeight="Bold"
                               FontSize="28"
                               Margin="0,-2,0,0"
                               Foreground="{DynamicResource BrushHeaderFG}"/>
                    <TextBlock x:Name="HeaderSubtitle"
                               Text="Subtitle"
                               FontSize="14"
                               Margin="0,2,0,0"
                               Foreground="{DynamicResource BrushHeaderSubFG}"/>
                </StackPanel>
            </StackPanel>

            <!-- Højre: Actions/ikoner -->
            <WrapPanel x:Name="HeaderActions"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       ItemHeight="28"
                       ItemWidth="28"
                       Margin="8,0,2,0"/>
        </Grid>
    </Border>
</Grid>
