<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:Name="HeaderRoot">

    <Grid.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Grid.Resources>

    <!-- Outer card -->
    <Border CornerRadius="0,0,16,16"
            Padding="10"
            Background="{DynamicResource BrushHeaderBG}"
            BorderBrush="{DynamicResource BrushHeaderBorder}"
            BorderThickness="0,0,0,1"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect Color="#33000000" BlurRadius="18" ShadowDepth="3" Direction="270" Opacity="0.35"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Logo + titles -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="6,2,8,2">
                <Image x:Name="HeaderLogo"
                       Width="88" Height="88"
                       Stretch="Uniform"
                       Cursor="Hand"
                       Opacity="0.98"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Image.RenderTransform>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                 To="1.20" Duration="0:0:0.15"/>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                 To="1.20" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                 To="1.0" Duration="0:0:0.15"/>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                 To="1.0" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="12,0,0,0">
                <TextBlock x:Name="HeaderTitle"
                        Text="BLUARCH"
                        FontSize="44"
                        FontWeight="Bold"
                        TextOptions.TextFormattingMode="Display"
                        TextOptions.TextRenderingMode="ClearType"
                        TextOptions.TextHintingMode="Fixed"
                        RenderTransformOrigin="0.5,0.5">

                <!-- Default: sølv + blød skygge -->
                <TextBlock.Effect>
                    <DropShadowEffect Color="#33000000" BlurRadius="10" ShadowDepth="2" Opacity="0.85"/>
                </TextBlock.Effect>

                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </TextBlock.RenderTransform>

                <!-- Sølv-gradient som kan animeres -->
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <!-- Sølv-toner -->
                    <GradientStop Color="#F2F2F2" Offset="0"/>
                    <GradientStop Color="#C8C8C8" Offset="0.55"/>
                    <GradientStop Color="#EDEDED" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>

                <!-- Hover: blå nuance + subtil scale + blålig skygge -->
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                        <!-- Shadow beef-up + blåt skær -->
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                        To="18" Duration="0:0:0.20"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.ShadowDepth)"
                                        To="4" Duration="0:0:0.20"/>
                        <ColorAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Color)"
                                        To="#552EA7FF" Duration="0:0:0.20"/>

                        <!-- Subtil scale -->
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                        To="1.02" Duration="0:0:0.12"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                        To="1.02" Duration="0:0:0.12"/>

                        <!-- Blålige nuancer i gradienten -->
                        <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                        To="#6FC3FF" Duration="0:0:0.25"/>
                        <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                        To="#2EA7FF" Duration="0:0:0.25"/>
                        </Storyboard>
                    </BeginStoryboard>
                    </EventTrigger>

                    <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                        <!-- Tilbage til normal skygge -->
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                        To="10" Duration="0:0:0.20"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.ShadowDepth)"
                                        To="2" Duration="0:0:0.20"/>
                        <ColorAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Color)"
                                        To="#33000000" Duration="0:0:0.20"/>

                        <!-- Tilbage til 1.00 scale -->
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                        To="1" Duration="0:0:0.12"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                        To="1" Duration="0:0:0.12"/>

                        <!-- Tilbage til sølv -->
                        <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                        To="#C8C8C8" Duration="0:0:0.25"/>
                        <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                        To="#EDEDED" Duration="0:0:0.25"/>
                        </Storyboard>
                    </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
                </TextBlock>


                    <!-- Farver kan overskrives fra dit tema -->
                    <TextBlock x:Name="HeaderSubtitle"
                               Text="PowerShell Tools for WPF"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,6,0,0"
                               Foreground="{DynamicResource BrushHeaderSubFG}"/>
                </StackPanel>
            </StackPanel>

            <!-- RIGHT: actions + theme picker + info card -->
            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="8,0,2,2">

                <!-- Actions row: your dynamic icons + Info toggle -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,6"
                            SnapsToDevicePixels="True">
                    <StackPanel x:Name="HeaderActions"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,6,0"/>

                    <!-- Info toggle (acts like info button) -->
                    <ToggleButton x:Name="InfoToggle"
                                  Width="24" Height="24"
                                  ToolTip="About / Info"
                                  Cursor="Hand"
                                  Focusable="False"
                                  Margin="12,0,6,0"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0">
                            <Image x:Name="InfoIcon"
                                   Width="24" Height="24"
                                   Opacity="0.7"
                                   Stretch="Uniform">
                                <Image.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Image.RenderTransform>
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                            To="1.10" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                            To="1.10" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                            To="1.0" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                            To="1.0" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBorderBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </StackPanel>

                <!-- Theme picker -->
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Theme"
                               VerticalAlignment="Bottom"
                               Margin="0,0,8,0"
                               Foreground="{DynamicResource BrushHeaderSubFG}"/>
                    <ComboBox x:Name="ThemeCombo"
                              MinWidth="140"
                              VerticalAlignment="Center"
                              Foreground="#1F1147"
                              Background="{DynamicResource BrushSurface}"
                              BorderBrush="{DynamicResource BrushDivider}"
                              BorderThickness="{DynamicResource ThinBorder}">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="8,6"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBorderBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </DockPanel>

                <!-- Læg dette som søskendebarn til Theme picker/Actions i headeren -->
                <Popup x:Name="InfoPopup"
                    PlacementTarget="{Binding ElementName=InfoToggle}"
                    Placement="Bottom"
                    StaysOpen="False"
                    AllowsTransparency="True"
                    PopupAnimation="Fade"
                    IsOpen="{Binding ElementName=InfoToggle, Path=IsChecked, Mode=TwoWay}">
                    <Border CornerRadius="10"
                            Padding="10"
                            Background="{DynamicResource BrushSurface}"
                            BorderBrush="{DynamicResource BrushDivider}"
                            BorderThickness="{DynamicResource ThinBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>


                            <Image x:Name="InfoPopupImage" Width="56" Height="56"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Kristian Holm Buch" FontWeight="Bold"
                                        Foreground="{DynamicResource BrushPrimaryFG}"/>
                                <TextBlock Text="Bluagentis — Bluarch"
                                        Foreground="{DynamicResource BrushMutedFG}" FontSize="12"/>
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <TextBlock Text="GitHub"  Cursor="Hand" Foreground="{DynamicResource AccentBrush}"/>
                                    <TextBlock Text="  •  "   Foreground="{DynamicResource BrushDivider}"/>
                                    <TextBlock Text="LinkedIn" Cursor="Hand" Foreground="{DynamicResource AccentBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <Button x:Name="InfoClose" Grid.Column="2" Content="✕"
                                    Width="28" Height="28" Margin="6,0,0,0"
                                    Background="{DynamicResource BrushSurface}"
                                    BorderBrush="{DynamicResource BrushDivider}"
                                    BorderThickness="{DynamicResource ThinBorder}"/>
                        </Grid>
                    </Border>
                </Popup>

            </StackPanel>
        </Grid>
    </Border>

    <!-- Accent line -->
    <Rectangle Height="2"
               VerticalAlignment="Bottom"
               Fill="{DynamicResource AccentBrush}"
               Opacity="0.75"
               Margin="16,0,16,0"
               RadiusX="1" RadiusY="1"/>
</Grid>
